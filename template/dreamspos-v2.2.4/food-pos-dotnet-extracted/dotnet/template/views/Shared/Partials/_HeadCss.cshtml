@{
	var path = Context?.Request?.Path.Value ?? string.Empty;
	var fileName = System.IO.Path.GetFileName(path);
	var pageNoExt = (string.IsNullOrEmpty(fileName) ? string.Empty : System.IO.Path.GetFileNameWithoutExtension(fileName)).ToLowerInvariant();

	bool IsPage(params string[] names)
	{
		if (string.IsNullOrEmpty(pageNoExt)) return false;
		foreach (var n in names)
		{
			var name = (n ?? string.Empty).ToLowerInvariant();
			if (name.EndsWith(".cshtml")) name = System.IO.Path.GetFileNameWithoutExtension(name);
			if (pageNoExt == name) return true;
		}
		return false;
	}

	bool IsNotAny(params string[] names) => !IsPage(names);

	string[] excludedSimplePages = new[] {
		"login","register","email-verification","forgot-password","reset-password","otp"
	};
}

